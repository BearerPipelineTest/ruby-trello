#!/usr/bin/env ruby

puts 'ruby-trello dev useful commands:'
puts ''
puts '  dev/setup'
puts '     # setup the main container and Gemfile for the newest Ruby version'
puts ''
puts '  dev/setup [RUBY VERSION]'
puts '     # setup the container and Gemfile for a specific Ruby version'
puts ''
puts '  dev/setup all'
puts '     # setup all containers and Gemfiles for all Ruby versions'
puts ''
puts '  dev/rspec [TEST FILE PATH (Optional)]'
puts '     # run tests under the newest Ruby version'
puts ''
puts '  dev/rspec [RUBY VERSION] [TEST FILE PATH (Optional)]'
puts '     # run tests under a specific Ruby version'
puts ''
puts '  dev/rspec all [TEST FILE PATH (Optional)]'
puts '     # run tests under all Ruby versions'
puts ''
puts '  dev/bash'
puts '     # get the bash with the newest Ruby vesion'
puts ''
puts '  dev/bash [RUBY VERSION]'
puts '     # get the bash with a specific Ruby vesion'
puts ''
puts '  dev/bundle [OPTIONS]'
puts '     # run bundle with the newest Ruby version'
puts ''
puts '  dev/bundle [RUBY VERSION]'
puts '     # run bundle with a specific Ruby version'
puts ''
puts '  dev/bundle all [RUBY VERSION]'
puts '     # run bundle with all Ruby versions'
puts ''
puts '  dev/help'
puts '     # Show this help'
puts ''
